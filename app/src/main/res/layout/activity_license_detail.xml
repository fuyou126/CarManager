<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.LicenseCheck.LicenseDetailActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_license_check_detail_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/back_row"
            android:translationX="8dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证件审核"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_license_check_detail_back"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/home_license_check_detail_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_sale_car_pic"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/home_license_check_detail_stuNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/home_license_check_detail_back"
        android:text="学号:2020118108"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/home_license_check_detail_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/home_license_check_detail_back"
        android:text="姓名:张樊"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/home_license_check_detail_carNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/home_license_check_detail_back"
        android:text="车牌:陕A·8UZS01"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/home_license_check_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/home_license_check_detail_back"
        android:text="电话:15091752282"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/home_license_check_detail_carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginStart="60dp"
        android:layout_below="@id/home_license_check_detail_back"
        android:text="车辆:奥迪 A6"
        android:textSize="18sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_license_check_detail_no"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/red_btn_bg_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不通过"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_license_check_detail_yes"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_button_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>