<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.Report.ReportDetailActivity"
    android:background="@color/background_color">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_report_check_detail_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="70dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        tools:ignore="SpeakableTextPresentCheck"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/back_row"
            android:translationX="8dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="举报内容"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="38dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_report_check_detail_card"
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_report_check_detail_back"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/home_report_check_detail_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test_sale_car_pic"
            android:transitionName="pic"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/home_report_check_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="危险驾驶"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_below="@id/home_report_check_detail_card"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/home_report_check_detail_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="危险驾驶"
        android:textSize="20sp"
        android:layout_below="@id/home_report_check_detail_type"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_report_check_detail_no"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/green_button_background"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不违规"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_report_check_detail_yes"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/red_btn_bg_color"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违规"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>