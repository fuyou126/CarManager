<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认当前地址和救援类型"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/home_rescue_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="正在获取中..."
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:layout_marginTop="40dp"
            android:alpha=".8"
            android:layout_marginHorizontal="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="#00000000"
            android:layout_marginTop="5dp"
            android:layout_below="@id/home_rescue_position">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_rescue_card_1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/home_rescue_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/blue_btn_bg_color"/>
                <TextView
                    android:id="@+id/home_rescue_text_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拖车"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/home_rescue_card_2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/home_rescue_button_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/white"/>
                <TextView
                    android:id="@+id/home_rescue_text_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换胎"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/home_rescue_card_3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/home_rescue_button_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/white"/>
                <TextView
                    android:id="@+id/home_rescue_text_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/home_rescue_description_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/home_rescue_position"
            app:cardCornerRadius="12dp">
            <EditText
                android:id="@+id/home_rescue_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:maxLines="1"
                android:hint="输入备注信息"
                android:layout_marginHorizontal="15dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/home_rescue_button_cancel"
            android:layout_below="@id/home_rescue_description_card"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/red_btn_bg_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/home_rescue_button_confirm"
            android:layout_below="@id/home_rescue_description_card"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/green_button_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/home_rescue_waiting"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:elevation="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请已发送，请等待调度"
                android:textColor="@color/red"
                android:alpha=".8"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="50dp"/>
            <TextView
                android:id="@+id/home_rescue_waiting_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救援类型:拖车"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="75dp"/>
            <TextView
                android:id="@+id/home_rescue_waiting_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置:西北大学"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="30dp"/>
            <TextView
                android:id="@+id/home_rescue_waiting_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注:需要拖车救援"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/home_rescue_waiting_position"/>
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/animation_truck_rescue"
                android:layout_below="@id/home_rescue_waiting_description"/>
        </RelativeLayout>
</RelativeLayout>