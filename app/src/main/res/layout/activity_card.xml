<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.CardActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_card_detail"
        android:transitionName="card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/home_card_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardElevation="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/close"/>

            </androidx.cardview.widget.CardView>
            <ImageView
                android:id="@+id/home_card_emo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/smile"
                android:alpha=".7"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/home_card_close"
                android:layout_above="@id/home_card_emo"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学号:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_stuNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2020118108"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张樊"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_carName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="奥迪 A8"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车牌:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_carNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="陕A· A6SH2S"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信誉状态:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优秀"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="办理日期:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2023/12/04"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D9D9D9"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="30dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="截止日期:"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/main_blue_color"
                        android:alpha=".8"/>
                    <TextView
                        android:id="@+id/home_card_endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024/12/04"
                        android:textSize="18sp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:textAlignment="viewEnd"
                        android:textColor="#5B5B5B"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</RelativeLayout>